<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.notification.ScollActivity">

    <com.mvp.ui.widget.VoiceView
        android:id="@+id/v_voice"
        android:layout_width="122dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="32dp" />

    <com.mvp.ui.widget.RedPointTextView
        android:id="@+id/v_text"
        android:layout_width="100dp"
        android:layout_height="20dp" />

    <com.mvp.ui.widget.VoiceGroup
        android:id="@+id/vg_voice"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="122dp"
        android:layout_height="60dp">

    </com.mvp.ui.widget.VoiceGroup>
    <com.mvp.ui.widget.IndicatorsViewGroup
        android:layout_width="300dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="100dp">

    </com.mvp.ui.widget.IndicatorsViewGroup>

    <com.mvp.ui.widget.ArrowsView
        android:id="@+id/v_arr"
        app:layout_constraintTop_toBottomOf="@+id/v_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_width="15dp"
        android:layout_height="wrap_content" />
    <com.mvp.ui.widget.CloseView
        app:layout_constraintTop_toBottomOf="@+id/v_arr"
        android:layout_width="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_height="20dp" />

</android.support.constraint.ConstraintLayout>
